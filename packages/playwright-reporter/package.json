{
  "name": "@sayankundu009/playwright-reporter",
  "version": "2.0.1",
  "description": "A custom Playwright test reporter",
  "files": [
    "dist/"
  ],
  "keywords": [
    "playwright",
    "reporter",
    "testing",
    "typescript"
  ],
  "author": "Sayan Kundu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sayankundu009/test-reporters.git"
  },
  "bugs": {
    "url": "https://github.com/sayankundu009/test-reporters/issues"
  },
  "homepage": "https://github.com/sayankundu009/test-reporters",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "npm run build && playwright test --config=tests/playwright.config.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "api": "file:../../api/dist",
    "utils": "file:../../utils/dist",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@playwright/test": "^1.40.0"
  },
  "directories": {
    "test": "tests"
  }
}
